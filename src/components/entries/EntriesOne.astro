---
const { title, url, description, pubDate, author, image } = Astro.props;
---

<a href={url} title={title}
  ><div class="w-full lg:pt-6 relative">
    <article class="mx-auto 2xl:max-w-7xl md:px-12 lg:py-24 px-4 py-4">
      <div class="w-full absolute inset-0">
        <img
          class="w-full aspect-video h-full object-cover"
          src={image}
          alt={title}
        />
      </div>
      <div
        class="relative 2xl:max-w-7xl lg:mt-24 max-w-6xl md:p-10 mx-auto p-4">
        <div class="bg-wood-100 p-4 lg:-mb-[8.5rem] lg:p-10 max-w-xl sm:p-8">
          <div>
            <h1
              class="text-black tracking-tight font-display text-4xl font-bold">
              {title}
            </h1><p class="text-black tracking-tight mt-4 text-lg">
              {description}
            </p>
          </div>
          <div class="items-center inline-flex space-x-1 mt-10">
            <p class="font-medium text-gray-900 text-sm">   {author}</p><span
              aria-hidden="true">Â·</span
            ><div class="flex text-gray-500 text-sm">
              <time datetime={pubDate}>{pubDate}</time>
            </div>
          </div>

        </div>
      </div>
    </article>
  </div></a
>

