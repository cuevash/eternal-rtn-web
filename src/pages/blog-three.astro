---
import { getCollection } from "astro:content";
const allPosts = await getCollection("posts");
import BaseLayout from "../layouts/BaseLayout.astro";
import EntriesThree from "../components/entries/EntriesThree.astro";
import EntriesFour from "../components/entries/EntriesFour.astro";
import InsightsTwo from "../components/entries/InsightsTwo.astro";
import Subscribe from "../components/cta/Subscribe.astro";
import { AstroSeo } from "@astrolib/seo";
---

<AstroSeo
  title="Blog 3"
  description="Your site description goes here"
  canonical="https://www.lexingtonthemes.com"
  openGraph={{
    url: "https://www.lexingtonthemes.com",
    title: "Open Graph Title",
    description: "Open Graph Description",
    images: [
      {
        url: "https://www.lexingtonthemes.com/opengraph/social-og.jpg",
        width: 1200,
        height: 630,
        alt: "Social open graph",
        type: "image/jpeg",
      },
      {
        url: "https://www.lexingtonthemes.com/opengraph/twitter-og.jpg",
        width: 4096,
        height: 4096,
        alt: "Twitter open graph",
        type: "image/jpeg",
      },
      { url: "https://www.lexingtonthemes.com/opengraph/social-og.jpg" },
      { url: "https://www.lexingtonthemes.com/opengraph/twitter-og.jpg" },
    ],
    site_name: "YourSitesName",
  }}
  twitter={{
    handle: "@TwitterHandle",
    site: "@site",
    cardType: "summary_large_image",
  }}
/>
<BaseLayout>
  <section aria-labelledby="your-label" id="your-id">
    <div
      class="items-center 2xl:max-w-7xl max-w-6xl md:px-12 mx-auto px-8 pt-32">
      <div class="border-b pb-5">
        <div class="max-w-xl">
          <p
            class="text-black tracking-tight font-display text-4xl font-semibold">
            Welcome to our blog!
          </p><p class="text-slate-600 mt-4 text-lg tracking-tight">
            Advice, Strategies, InsightsTwo and Stories for the success of
            companies, schools and start-ups.
          </p>
        </div>
      </div>
    </div>
  </section>
  <section>
    <div class="mx-auto 2xl:max-w-7xl md:px-12 px-8 max-w-6xl py-32">
      <div class="space-y-12">
        <div
          class="grid grid-cols-1 gap-12 lg:gap-10 lg:space-y-0 sm:grid-cols-1">
          {
            allPosts
              .slice(1, 2)
              .map((post) => (
                <EntriesThree
                  url={"/posts/" + post.slug}
                  title={post.data.title}
                  description={post.data.description}
                  alt={post.data.title}
                  pubDate={post.data.pubDate.toString().slice(0, 10)}
                  author={post.data.author}
                  image={post.data.image.url}
                />
              ))
          }
        </div>
        <div
          class="grid grid-cols-1 gap-12 lg:gap-10 lg:space-y-0 sm:grid-cols-1">
          {
            allPosts
              .slice(2, 3)
              .map((post) => (
                <EntriesFour
                  url={"/posts/" + post.slug}
                  title={post.data.title}
                  description={post.data.description}
                  alt={post.data.title}
                  pubDate={post.data.pubDate.toString().slice(0, 10)}
                  author={post.data.author}
                  image={post.data.image.url}
                />
              ))
          }
        </div>
        <div
          class="grid grid-cols-1 gap-12 lg:gap-10 lg:space-y-0 sm:grid-cols-1">
          {
            allPosts
              .slice(3, 4)
              .map((post) => (
                <EntriesThree
                  url={"/posts/" + post.slug}
                  title={post.data.title}
                  description={post.data.description}
                  alt={post.data.title}
                  pubDate={post.data.pubDate.toString().slice(0, 10)}
                  author={post.data.author}
                  image={post.data.image.url}
                />
              ))
          }
        </div>
        <div
          class="grid grid-cols-1 gap-12 lg:gap-10 lg:space-y-0 sm:grid-cols-1">
          {
            allPosts
              .slice(1, 2)
              .map((post) => (
                <EntriesFour
                  url={"/posts/" + post.slug}
                  title={post.data.title}
                  description={post.data.description}
                  alt={post.data.title}
                  pubDate={post.data.pubDate.toString().slice(0, 10)}
                  author={post.data.author}
                  image={post.data.image.url}
                />
              ))
          }
        </div>
      </div>
    </div>
  </section>

  <section aria-labelledby="your-label" id="your-id">
    <div class="mx-auto 2xl:max-w-7xl md:px-12 px-8 max-w-6xl py-24">
      <div class="border-b pb-5 sm:flex sm:items-center sm:justify-between">
        <h2
          class="text-black tracking-tight font-display text-4xl font-semibold">
          InsightsTwo
        </h2>
        <div class="mt-3 sm:ml-4 sm:mt-0">
          <a
            href="/"
            class="text-slate-600 text-lg tracking-tight hover:text-salmon-600"
            >Read all posts &nbsp; â†’</a
          >
        </div>
      </div>

      <div
        class="grid gap-12 grid-cols-1 lg:gap-10 lg:space-y-0 sm:grid-cols-2 border-b md:grid-cols-3 mt-12 pb-12">
        {
          allPosts
            .slice(0, 3)
            .map((post) => (
              <InsightsTwo
                url={"/posts/" + post.slug}
                title={post.data.title}
                description={post.data.description}
                alt={post.data.title}
                pubDate={post.data.pubDate.toString().slice(0, 10)}
                author={post.data.author}
                image={post.data.image.url}
              />
            ))
        }
      </div>
    </div>
  </section>
  <Subscribe />
</BaseLayout>
